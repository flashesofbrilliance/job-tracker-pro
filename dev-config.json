{
  "project": {
    "name": "job-tracker-pro",
    "type": "web-app",
    "framework": "vanilla-js-webgl",
    "architecture": "component-based"
  },
  
  "server": {
    "port": 8081,
    "host": "0.0.0.0",
    "type": "node",
    "script": "dev-server-warp.js",
    "startup": "./start-warp-compatible.sh",
    "warp_bypass": true,
    "endpoints": {
      "/api/job-recommendations": "mock",
      "/api/jobs/*": "mock"
    },
    "mimeTypes": ["webp", "glsl", "webm"],
    "fallback": "python"
  },
  
  "development": {
    "autoReload": true,
    "versionControl": {
      "strategy": "semantic",
      "autoIncrement": true,
      "cacheTag": "git-hash"
    },
    "buildProcess": {
      "autoWatch": ["*.js", "*.css", "*.html"],
      "cacheBusting": "auto",
      "minification": false,
      "sourceMaps": true
    }
  },
  
  "standards": {
    "codeStyle": {
      "javascript": "es6+",
      "css": "css3-custom-properties",
      "html": "html5-semantic"
    },
    "naming": {
      "files": "kebab-case",
      "variables": "camelCase",
      "constants": "SNAKE_CASE",
      "css-classes": "kebab-case"
    },
    "structure": {
      "maxFileSize": "500kb",
      "maxFunctionLength": 50,
      "maxNestingDepth": 4
    }
  },
  
  "quality": {
    "linting": {
      "enabled": true,
      "rules": "recommended",
      "autofix": true
    },
    "formatting": {
      "enabled": true,
      "semicolons": true,
      "quotes": "single",
      "indentation": 2
    },
    "testing": {
      "unitTests": true,
      "integrationTests": false,
      "e2eTests": false
    },
    "accessibility": {
      "wcag": "AA",
      "colorContrast": 4.5,
      "keyboardNav": true
    }
  },
  
  "deployment": {
    "environments": ["development", "staging", "production"],
    "strategy": "git-flow",
    "cicd": false
  },
  
  "monitoring": {
    "performanceMetrics": true,
    "errorTracking": true,
    "userAnalytics": false,
    "a11yTesting": true
  }
}