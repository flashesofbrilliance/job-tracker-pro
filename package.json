{
  "name": "job-tracker-pro",
  "version": "0.1.0",
  "private": true,
  "description": "Clean, minimal job tracking web app",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/index.html",
    "serve": "http-server . -p 8080 -o",
    "lint": "echo 'lint ok'",
    "build": "rm -rf dist && mkdir -p dist && cp index.html dist/ && cp style.css dist/ || true && cp app.js dist/ || true && for f in discovery-*.html; do [ -e \"$f\" ] && cp \"$f\" dist/; done && for f in discovery-*.js; do [ -e \"$f\" ] && cp \"$f\" dist/; done",
    "build:discovery": "rm -rf dist-discovery && mkdir -p dist-discovery && cp style.css dist-discovery/ || true && for f in discovery-*.html; do [ -e \"$f\" ] && cp \"$f\" dist-discovery/; done && for f in discovery-*.js; do [ -e \"$f\" ] && cp \"$f\" dist-discovery/; done",
    "preview:pr": "bash scripts/preview-pr.sh",
    "preview:discovery": "bash scripts/preview-discovery.sh",
    "preview:open": "bash scripts/open-preview.sh",
    "health:check": "node scripts/health-check.js",
    "test:rollback": "bash scripts/test-rollback.sh",
    "test:simulation": "bash scripts/deployment-simulation.sh",
    "validate:dev": "node scripts/validate-environment.js dev",
    "validate:qa": "node scripts/validate-environment.js qa",
    "validate:stage": "node scripts/validate-environment.js stage",
    "validate:prod": "node scripts/validate-environment.js prod",
    "track:changes": "node scripts/track-changes.js",
    "bootstrap:ci": "bash scripts/bootstrap-ci.sh",
    "setup:pipeline": "bash scripts/setup-pipeline.sh",
    "discover:roles": "node scripts/discovery-pipeline.js --no-fetch --sources docs/discovery-sources.json --out api/discovered-roles.json --outCsv docs/discovered-roles.csv",
    "discover:fetch": "node scripts/discovery-pipeline.js --fetch --sources docs/discovery-sources.json --out api/discovered-roles.json --outCsv docs/discovered-roles.csv --verbose"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "live-server": "^1.2.2"
  }
}
